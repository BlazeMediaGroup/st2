{
    "name": "run-local",
    "description": "A runner to execute local actions as a fixed user.",
    "enabled": true,
    "runner_parameters": {
        "hosts": {
            "type": "string",
            "default": "localhost",
            "immutable": true
        },
        "cmd": {
            "type": "string"
        },
        "sudo": {
            "type": "boolean",
            "default": false
        }
    },
    "runner_module": "st2actions.runners.localrunner"
}
